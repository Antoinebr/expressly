{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "./src",
    "sourceMap": false,
    "noImplicitAny": false,
    "target": "es2019",
    "module": "es2020",
    "lib": ["es2019"],
    "skipLibCheck": false,
    "strict": false,
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@fastly"],
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "exclude": ["dist/", "examples/", "docs/"]
}
