{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "./src",
    "sourceMap": false,
    "noImplicitAny": false,
    "module": "es6",
    "target": "es2019",
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@fastly", "./node_modules/@types"],
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
  },
  "exclude": ["dist/", "examples/"]
}
